import tkinter as tk
from tkinter import ttk

# Create main window
root = tk.Tk()
root.title("Saurav Tiwary - Stylish Portfolio")
root.geometry("900x700")
root.config(bg="#e8f0fe")  # Light blue background

# Fonts
title_font = ("Arial", 26, "bold")
heading_font = ("Arial", 18, "bold")
text_font = ("Arial", 12)
label_color = "#2c3e50"

# Scrollable canvas setup
main_frame = tk.Frame(root, bg="#e8f0fe")
main_frame.pack(fill=tk.BOTH, expand=1)

canvas = tk.Canvas(main_frame, bg="#e8f0fe", highlightthickness=0)
scrollbar = ttk.Scrollbar(main_frame, orient=tk.VERTICAL, command=canvas.yview)
scroll_frame = tk.Frame(canvas, bg="#e8f0fe")

scroll_frame.bind(
    "<Configure>",
    lambda e: canvas.configure(scrollregion=canvas.bbox("all"))
)

canvas.create_window((0, 0), window=scroll_frame, anchor="nw")
canvas.configure(yscrollcommand=scrollbar.set)

canvas.pack(side=tk.LEFT, fill=tk.BOTH, expand=True)
scrollbar.pack(side=tk.RIGHT, fill=tk.Y)

# Section: Title
tk.Label(scroll_frame, text="Saurav Tiwary â€“ Portfolio", font=title_font, fg="#1a237e", bg="#e8f0fe").pack(pady=20)

